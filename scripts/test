#!/bin/bash

# Simple test launcher script
# Usage examples:
#   ./scripts/test                    # Run working unit tests + integration tests
#   ./scripts/test unit              # Run only unit tests  
#   ./scripts/test integration       # Run only integration tests
#   ./scripts/test all               # Run all tests including experimental ones

case "${1:-default}" in
    "unit")
        ./scripts/run-tests.sh --unit-only
        ;;
    "integration") 
        ./scripts/run-tests.sh --integration-only
        ;;
    "all"|"comprehensive")
        ./scripts/run-tests.sh --comprehensive
        ;;
    "help"|"--help"|"-h")
        echo "Simple test launcher for oxy-app Helm chart"
        echo ""
        echo "Usage:"
        echo "  ./scripts/test              # Run working tests (unit + integration)"  
        echo "  ./scripts/test unit         # Run only unit tests"
        echo "  ./scripts/test integration  # Run only integration tests"
        echo "  ./scripts/test all          # Run all tests (including experimental)"
        echo "  ./scripts/test help         # Show this help"
        echo ""
        ;;
    "default"|*)
        ./scripts/run-tests.sh
        ;;
esac